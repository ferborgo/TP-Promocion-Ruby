<div class="container">
  <br>
    <div class="row">
        <div class="col-sm-1"> </div>
        <div class="col-sm-10">
          <% if @users.empty? %>
            <h4 class="text-center"> No results... </h4>
          <% else %>
            <h4 class="text-center"> Public accounts </h4>
            <ul class="list-group">
              <% @users.each do |user| %>
                <li class="list-group-item">
                  <span>
                    <b> <%= user.first_name %> <%= user.last_name %> </b>
                  </span>
                  <span><%= user.email %></span>
                  <span class="boton-ver">
                    <%= link_to('Ver', show_profile_path(user.id)) %>
                  </span>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <div class="col-sm-1"> </div>
    </div>
</div>
